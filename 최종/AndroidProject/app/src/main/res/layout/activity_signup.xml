<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color5"
    tools:context=".Activity.SignupActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="W E A T H E R"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:background="@color/color5"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="9"
        android:background="@drawable/login_tab"
        android:layout_marginBottom="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            >

            <EditText
                android:id="@+id/et_Email_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="15dp"
                android:background="@drawable/edit_text"
                android:padding="13dp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"
                />

            <EditText
                android:id="@+id/et_Pw_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:padding="13dp"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:background="@drawable/edit_text"
                android:layout_marginTop="20dp"
                android:imeOptions="actionDone"
                />

            <EditText
                android:id="@+id/et_PwCheck_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password Check"
                android:padding="13dp"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:background="@drawable/edit_text"
                android:layout_marginTop="20dp"
                android:imeOptions="actionDone"
                />

            <EditText
                android:id="@+id/et_name_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:textSize="15dp"
                android:background="@drawable/edit_text"
                android:layout_marginTop="20dp"
                android:padding="13dp"
                android:imeOptions="actionDone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/et_phone_signup"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:enabled="true"
                    android:background="@drawable/edit_text"
                    android:layout_marginTop="20dp"
                    android:padding="13dp"
                    android:hint="휴대전화 번호"
                    android:inputType="number"
                    />
                <Button
                    android:id="@+id/btn_pin_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="code"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >

                <EditText
                    android:id="@+id/et_code_signup"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_text"
                    android:enabled="true"
                    android:hint="CODE"
                    android:inputType="text"
                    android:padding="13dp"
                    android:textSize="15sp"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/codecount_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="00:00"
                    android:textSize="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="130dp"
                    android:visibility="invisible"
                    android:layout_gravity="right|center"
                    />
                <Button
                    android:id="@+id/btn_pin_ok_signup"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:layout_gravity="right"
                    android:text="OK"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_pin_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="10dp"
                    android:text="인증번호가 틀렸습니다."
                    android:textColor="#FF002E"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/btn_ok_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="SIGN UP"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"
                    android:visibility="invisible"
                    android:enabled="false"
                    />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>