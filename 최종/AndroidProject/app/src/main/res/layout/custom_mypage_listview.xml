<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/linear1_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객명"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/linear1_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/linear1_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/linear1_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락처"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/linear1_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/linear1_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락처"
            android:textSize="10dp"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="0px"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:id="@+id/linear2_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고객명"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/linear2_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/linear2_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/linear2_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/linear2_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/linear2_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처"
                android:textSize="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="20dp"
            >
            <TextView
                android:id="@+id/linear2_tv_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color5"
                android:text="링크 텍스트>"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>