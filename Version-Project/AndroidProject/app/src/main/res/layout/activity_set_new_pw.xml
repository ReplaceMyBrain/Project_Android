<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity.SetNewPwActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topToolBar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color5"
            android:elevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pageTitlewithBtnTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="비밀번호 변경"
                    android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/findpw_check_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:text="새로운 비밀번호 입력"
            android:textColor="#050505"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/findpw_check_edittext2"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:hint="   비밀번호 재입력"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/findpw_check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/findpw_check_edittext2"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="5dp"
            android:text="확인" />

        <TextView
            android:id="@+id/findpw_check_ex"
            android:layout_width="305dp"
            android:layout_height="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="40dp"
            android:text="*비밀번호는 최소 8자리 영어, 숫자, 특수문자 중 두 종류가 포함 되어야 합니다." />

        <TextView
            android:id="@+id/findpw_check_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="160dp"
            android:text="'비밀번호가 다릅니다.'"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/findpw_check_edittext1"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:hint="   비밀번호 입력"
            android:inputType="textPassword"
            />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>